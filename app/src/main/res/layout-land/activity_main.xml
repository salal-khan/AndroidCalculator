<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.web.calculator.MainActivity">

    <EditText
        android:id="@+id/et_result"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="numberSigned|numberDecimal"
        tools:layout_editor_absoluteY="3dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/tv_operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/btn_one"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_one"
        app:layout_constraintLeft_toLeftOf="@+id/et_newNumber" />

    <EditText
        android:id="@+id/et_newNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned|numberDecimal"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="42dp"
        android:minWidth="48dip"
        android:text="1"
        app:layout_constraintRight_toLeftOf="@+id/btn_two"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_two" />

    <Button
        android:id="@+id/btn_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="42dp"
        android:minWidth="48dip"
        android:text="2"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_three"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btn_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="42dp"
        android:minWidth="48dip"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        android:layout_marginStart="8dp"
        android:text="3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/et_result" />

    <Button
        android:id="@+id/btn_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="42dp"
        android:minWidth="48dip"
        android:text="4"
        app:layout_constraintRight_toLeftOf="@+id/btn_five"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_five" />

    <Button
        android:id="@+id/btn_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="42dp"
        android:minWidth="48dip"
        android:text="5"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_six"
        app:layout_constraintRight_toRightOf="@+id/btn_two" />

    <Button
        android:id="@+id/btn_six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="42dp"
        android:minWidth="48dip"
        android:text="6"
        app:layout_constraintLeft_toLeftOf="@+id/btn_three"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_three" />

    <Button
        android:id="@+id/btn_seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="42dp"
        android:minWidth="48dip"
        android:text="7"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_eight"
        app:layout_constraintRight_toLeftOf="@+id/btn_eight"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btn_nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="42dp"
        android:minWidth="48dip"
        android:text="9"
        app:layout_constraintLeft_toLeftOf="@+id/btn_six"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_six" />

    <Button
        android:id="@+id/btn_eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="42dp"
        android:minWidth="48dip"
        android:text="8"
        app:layout_constraintRight_toRightOf="@+id/btn_five"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_nine" />

    <Button
        android:id="@+id/btn_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="42dp"
        android:minWidth="48dip"
        app:layout_constraintRight_toRightOf="@+id/btn_eight"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_equals"
        android:text="." />

    <Button
        android:id="@+id/btn_equals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="42dp"
        android:minWidth="48dip"
        app:layout_constraintTop_toBottomOf="@+id/btn_nine"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_nine"
        android:text="=" />

    <Button
        android:id="@+id/btn_zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="42dp"
        android:minWidth="48dip"
        app:layout_constraintRight_toLeftOf="@+id/btn_dot"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_dot"
        android:text="0" />

    <Button
        android:id="@+id/btn_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="42dp"
        android:minWidth="48dip"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_three"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_three"
        android:text="+" />

    <Button
        android:id="@+id/btn_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="42dp"
        android:minWidth="48dip"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_equals"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_equals"
        android:text="-" />

    <Button
        android:id="@+id/btn_divid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="42dp"
        android:minWidth="48dip"
        android:text="/"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_nine"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_nine" />

    <Button
        android:id="@+id/btn_mulitply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="42dp"
        android:minWidth="48dip"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_six"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_six"
        android:text="*" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5065666"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="300dp" />

</android.support.constraint.ConstraintLayout>
